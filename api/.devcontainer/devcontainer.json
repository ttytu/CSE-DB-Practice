{
	"name": "fastapi",
	"dockerFile": "dev.Dockerfile",
	"workspaceFolder": "/app",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.black-formatter",
				"ms-vscode-remote.remote-containers"
			],
			"settings": {
				"files.encoding": "utf8",
				"files.eol": "\n",
				"editor.formatOnSave": true,
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter"
				}
			}
		}
	},
	"forwardPorts": [
		8000
	]
}